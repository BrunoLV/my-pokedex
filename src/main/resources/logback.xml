<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <!-- concise: time level [reqId] logger - message -->
            <pattern>%d{HH:mm:ss.SSS} %-5level [%X{reqId:- }] %logger{20} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- application-level verbosity -->
    <logger name="com.valhala.mypokedex" level="DEBUG"/>
    <!-- reduce framework noise -->
    <logger name="io.micronaut" level="WARN"/>
    <logger name="org.testcontainers" level="WARN"/>
    <logger name="org.apache" level="WARN"/>

    <root level="INFO">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>
