<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} [%X{reqId}] - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- application-level verbosity -->
    <logger name="com.valhala.mypokedex" level="DEBUG"/>
    <!-- reduce framework noise -->
    <logger name="io.micronaut" level="WARN"/>
    <logger name="org.testcontainers" level="WARN"/>
    <logger name="org.apache" level="WARN"/>

    <root level="INFO">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>
